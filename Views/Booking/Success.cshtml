@{
    Layout = "_Layout";
}

<!-- Full Width Black Background Div with Heading -->
<div class="text-center p-4 mb-4" style="background-color: black; color: white; width: 100%;">
    <h2 style="margin: 0; font-weight: bold; font-size: 24px;">Booking Confirmed Successfully!</h2>
</div>

<!-- Success Message Container -->
<div class="container" style="max-width: 600px; margin: auto; background-color: #f8f9fa; padding: 30px; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); text-align: center;">
    <p style="font-size: 1.1rem; margin-bottom: 20px;">Thank you for your booking. We look forward to seeing you!</p>
    <a href="/Booking/Index" class="btn btn-dark btn-lg" style="font-weight: bold; background-color: black; border: none; color: white;">
        Make Another Booking
    </a>
</div>

<style>
    .container {
        margin: 0 auto;
