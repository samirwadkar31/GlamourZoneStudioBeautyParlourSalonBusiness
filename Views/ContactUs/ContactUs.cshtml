@{
    ViewData["BodyClass"] = "contactus-page";
}

@{
    ViewData["Title"] = "Contact Us";
}

<div class="contact-page-container">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1>Contact Us</h1>
            <p>We'd love to hear from you! Reach out for inquiries or feedback.</p>
        </div>
    </section>

    <!-- Contact Information Section -->
    <section class="contact-info-section">
        <div class="info-header">
            <h2>Get in Touch</h2>
            <p>We are here to assist you with all your salon needs.</p>
        </div>

        <div class="contact-info">
            <!-- Address -->
            <div class="contact-item">
                <i class="fas fa-map-marker-alt"></i>
                <div>
                    <h3>Our Address</h3>
                    <p>Shop no 13, Pyramid Icon, Railway Station, Opp. to Union Bank, Near Ghansoli, Sector 5, Savoli, Ghansoli, Navi Mumbai, Maharashtra 400701</p>
                    <a href="https://maps.app.goo.gl/V1XWMa3nKNNxNhfu6" target="_blank" class="map-link">View on Google Maps</a>
                </div>
            </div>

            <!-- Phone Number -->
            <div class="contact-item">
                <i class="fas fa-phone-alt"></i>
                <div>
                    <h3>Phone</h3>
                    <p><a href="tel:+918169129415">+91 8169129415</a></p>
                </div>
            </div>

            <!-- Email -->
            <div class="contact-item">
                <i class="fas fa-envelope"></i>
                <div>
                    <h3>Email</h3>
                    <p><a href="mailto:GlamourZoneStudio@gmail.com" class="email-address">GlamourZoneStudio@gmail.com</a></p>
                </div>
            </div>

            <!-- Instagram -->
            <div class="contact-item">
                <i class="fab fa-instagram"></i>
                <div>
                    <h3>Instagram</h3>
                    <p><a href="https://instagram.com/glamourzonestudio" target="_blank">Glamourzonestudio</a></p>
                </div>
            </div>
        </div>
    </section>

    <!-- Google Map Section -->
    <section class="map-section">
        <iframe src="https://maps.google.com/maps?q=Shop%20no%2013,%20Pyramid%20Icon,%20Railway%20Station,%20Opp.%20to%20Union%20Bank,%20Near%20Ghansoli,%20Sector%205,%20Savoli,%20Ghandsoli,%20Navi%20Mumbai,%20Maharashtra%20400701&t=&z=13&ie=UTF8&iwloc=&output=embed" width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </section>

    <!-- Contact Form Section -->
    <section class="contact-form-section">
        <h2>Get In Touch With Us</h2>
        <form action="/Contact/Submit" method="post" class="contact-form">
            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" name="name" required placeholder="Enter your name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="email">Your Email</label>
                <input type="email" id="email" name="email" required placeholder="Enter your email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="message">Your Message</label>
                <textarea id="message" name="message" required placeholder="Enter your message" class="form-control"></textarea>
            </div>
            <button type="submit" class="submit-btn">Send Message</button>
        </form>
    </section>
</div>
