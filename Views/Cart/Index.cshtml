@model List<GlamourZone.Models.ServiceViewModel>

<h1 class="text-center mb-4" style="color: black;">Your Booking Cart</h1>

@if (!Model.Any())
{
    <div class="text-center">
        <p class="lead" style="color: black;">Your cart is empty.</p>
        <p style="color: black;">Explore our services and book in bulk for the best experience!</p>
        <a href="/Categories" class="btn btn-dark btn-lg" style="font-weight: bold; background-color: black; border: none; color: white;">
            Browse Services
        </a>
    </div>
}
else
{
    <div class="container">
        @foreach (var service in Model)
        {
            <div class="card border-0 shadow-sm mb-4" style="background-color: #f8f9fa; border: 1px solid #ddd; border-radius: 8px;">
                <div class="card-body">
                    <h5 class="card-title" style="color: black;">@service.Name</h5>
                    <p class="card-text" style="color: black;">@service.Description</p>
                    <small class="text-muted">Price: @service.Price</small>
                    <a href="/Cart/Remove?serviceId=@service.Id" class="btn btn-danger btn-sm float-right">Remove</a>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a href="/Cart/ProceedToBook" class="btn btn-dark btn-lg" style="font-weight: bold; background-color: black; border: none; color: white;">
            Proceed to Book
        </a>
    </div>
}

<style>
    .container {
        margin: 0 auto;
    }

    .card {
        border-radius: 8px;
    }

    .card-title {
        font-weight: bold;
    }

    .card-text {
        margin-bottom: 1rem;
    }

    .btn-lg {
        font-weight: bold;
    }

    .btn-dark:hover {
        background-color: #333;
        border-color: #333;
    }

    .btn-danger {
        background-color: red;
        border: none;
    }

        .btn-danger:hover {
            background-color: darkred;
        }
</style>
